<?xml version="1.0" encoding="UTF-8" ?>
<component type="desktop-application">
  <id>page.codeberg.tahoso.azul-box</id>

  <name>Azul Box</name>
  <summary>audio/video conversion and youtube downloader</summary>
  <developer id="com.tahoso">
      <name>Tahoso</name>
  </developer>

  <url type="homepage">https://codeberg.org/Tahoso/azul-box</url>
