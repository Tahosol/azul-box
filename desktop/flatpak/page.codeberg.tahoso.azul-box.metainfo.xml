  <project_license>GPL-3.0-only</project_license>

  <requires>
    <control>keyboard</control>
    <control>pointing</control>
    <display_length compare="ge">768</display_length>
  </requires>

  <description>
    <p>This app is only available in English.</p>
    <p
        >Download music from YouTube with embedded lyrics from YouTube or lrclib.</p>
    <p>Metadata for music from the MusicBrainz database.</p>
    <p>Video and image format converter.</p>
    <p>Pinterest downloader.</p>
  </description>
  <content_rating type="oars-1.1" />

  <launchable
        type="desktop-id"
    >page.codeberg.tahoso.azul-box.desktop</launchable>
  <screenshots>
